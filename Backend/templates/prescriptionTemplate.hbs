<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <style>
      body {
        font-family: "Helvetica", sans-serif;
        padding: 30px;
        line-height: 1.6;
        font-size: 13px;
      }
      .header {
        text-align: center;
        border-bottom: 2px solid #000;
        padding-bottom: 10px;
        margin-bottom: 20px;
      }
      .header h2 {
        margin: 0;
        color: #2e4b9a;
      }
      .section-title {
        color: #2e4b9a;
        margin-top: 15px;
        border-bottom: 1px solid #ccc;
        padding-bottom: 5px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
      }
      table, th, td {
        border: 1px solid #ccc;
      }
      th, td {
        padding: 8px;
        text-align: left;
      }
      .signature {
        margin-top: 40px;
        text-align: right;
      }
      .signature img {
        width: 150px;
        height: auto;
      }
    </style>
  </head>
  <body>
    <div class="header">
      <h2>Dr. {{doctor.name}}</h2>
      <p>{{doctor.qualification}} | {{doctor.hospital}}</p>
      <p>Reg. No: {{doctor.regNo}} | {{doctor.state}}</p>
    </div>

    <p><strong>Patient Name:</strong> {{patient.name}}</p>
    <p><strong>Age/Sex:</strong> {{patient.age}} / {{patient.sex}}</p>
    <p><strong>Date:</strong> {{date}}</p>

    <h3 class="section-title">Diagnosis</h3>
    <p>{{diagnosis}}</p>

    <h3 class="section-title">Findings</h3>
    <p>{{findings}}</p>

    <h3 class="section-title">Allergy</h3>
    <p>{{allergy}}</p>

    <h3 class="section-title">Prescription (Rx)</h3>
    <table>
      <thead>
        <tr>
          <th>Medicine</th>
          <th>Dosage</th>
          <th>Frequency</th>
          <th>Duration</th>
          <th>Notes</th>
        </tr>
      </thead>
      <tbody>
        {{#each medicines}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.dosage}}</td>
          <td>{{this.frequency}}</td>
          <td>{{this.duration}}</td>
          <td>{{this.notes}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>

    <h3 class="section-title">Advice</h3>
    <p>{{advice}}</p>

    {{#if doctor.signature}}
    <div class="signature">
      <img src="{{doctor.signature}}" alt="Signature" />
      <p>Dr. {{doctor.name}}</p>
    </div>
    {{/if}}
  </body>
</html>
